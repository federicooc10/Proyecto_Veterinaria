@page
@model asp_presentacion.Pages.Ventanas.Formulas_MedicamentosModel
@{
    ViewData["Titulo"] = "Formulas_Medicamentos";
    ViewData["MostrarLogo"] = true;
    var rol = HttpContext.Session.GetString("Rol");
}
<center>
    <div>
        <form method="POST"
        enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Formula Recetadas</h3>
            </div>
            <div align="left"
            class="bt_panel_buttons">
                <input type="submit"
                value="Buscar"
                asp-page-handler="BtRefrescar"
                class="btn btn-secondary"
                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Nuevo"
                asp-page-handler="BtNuevo"
                class="btn btn-secondary"
                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Guardar"
                asp-page-handler="BtGuardar"
                class="btn btn-secondary"
                disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Cancelar"
                asp-page-handler="BtCancelar"
                class="btn btn-secondary"
                disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                asp-for="@Model.Actual!.Cantidad" />
                <input type="hidden"
                asp-for="@Model.Actual!.Formula" />
                <input type="hidden"
                asp-for="@Model.Actual!.Medicamento" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Formulas_Medicamentos</h3>

                    <div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Formula
                            </label>
                            <div class="col-lg-6">
                                <select id="nmFormula"
                                class="form-control"
                                asp-for="@Model.Actual!.Formula"
                                asp-items="@(new SelectList(Model.Formulas, "Id", "Codigo"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Medicamento
                            </label>
                            <div class="col-lg-6">
                                <select id="nmMedicamento"
                                class="form-control"
                                asp-for="@Model.Actual!.Medicamento"
                                asp-items="@(new SelectList(Model.Medicamentos, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cantidad
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCantidad"
                                class="cts_forms form-control"
                                asp-for="@Model.Actual!.Cantidad" />
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la siguiente informacion?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!._Formula!.Codigo,
                                @Model.Actual!._Medicamento!.Nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                            value="Borrar"
                            asp-page-handler="BtBorrar"
                            class="btn btn-secondary" />
                            <input type="submit"
                            value="Cerrar"
                            asp-page-handler="BtCancelar"
                            class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <br />
                <input id="FiltroFormulaCodigo"
                asp-for="Filtro._Formula.Codigo"
                class="cts_forms form-control"
                placeholder="Buscar por codigo de la formula" />

                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Formula</th>
                                <th>Medicamento</th>
                                <th>Cantidad</th>
                                @if (rol != "Cliente")
                                {
                                    <th>Acción</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Lista != null && Model.Lista.Any())
                            {
                                foreach (var elemento in Model.Lista)
                                {
                                    <tr>
										<td>@elemento._Formula?.Codigo</td>
										<td>@elemento._Medicamento?.Nombre</td>
										<td>@elemento.Cantidad</td>
                                        @if (rol != "Cliente"){
                                        <td>
                                            <input type="submit"
                                                   value="Modificar"
                                                   asp-page-handler="BtModificar"
                                                   class="btn btn-warning"
                                                   asp-route-data="@elemento.Id" />
                                            <input type="submit"
                                                   value="Borrar"
                                                   asp-page-handler="BtBorrarVal"
                                                   class="btn btn-danger"
                                                   asp-route-data="@elemento.Id" />
                                        </td>
                                        }
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5"><strong>No hay datos disponibles.</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </form>
    </div>
</center>